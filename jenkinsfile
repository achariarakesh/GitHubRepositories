node {
	def workspace = pwd();
	
	stage('Writing html file')
        {
        sh 'echo "<html>" >> myfile.html'
        sh 'echo "<header><title> This is the title</title></header>" >> myfile.html'
        sh 'echo "<body> how do you do? </body>" >> myfile.html'
        sh 'echo "</html>" >> myfile.html'
        sh 'ls -al C:\Users\AL2414\.jenkins\workspace\TestPipeline\testresults\myfile.html'
        sh 'head -1 C:\Users\AL2414\.jenkins\workspace\TestPipeline\testresults\myfile.html'
        }
        stage('Email')
        {
        env.ForEmailPlugin = env.WORKSPACE
        emailext mimeType: 'text/html',
        body: '${FILE, path="C:\Users\AL2414\.jenkins\workspace\TestPipeline\testresults\myfile.html"}',
        subject: env.JOB_NAME,
        to: 'rakesh.achar@accionlabs.com'
        }   
	
	
	stage('send email'){
	   echo "emailing.."
	 	 
		 
				 
		 mail to: 'rakesh.achar@accionlabs.com',
                 cc : 'rakesh.achar@accionlabs.com',
                 subject: "BUILD SUCCESSFUL: Build Version",
		 body: "Build Successful ${env.JOB_NAME}\n\nView the log at:\n ${env.JOB_URL}\\testresults\\TestResult.html"
		
	
	  BUILD_URL
 	}
	
	stage('Unittest'){
       
	}
	
	stage('Deploy')
	{
	  
	   
	}
	
	stage('Clear')
	{
	   echo "Clearing work space.."
	   echo "cleanWs()"
	}
}

