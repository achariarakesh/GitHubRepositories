node {
	def workspace = pwd();
	def testfilename = ${env.BUILD_ID} + "_TestResult.html"
	
	stage('send email'){
	   echo "emailing.."
	 	 
		 echo testfilename
				 
		 mail to: 'rakesh.achar@accionlabs.com',
                 cc : 'rakesh.achar@accionlabs.com',
                 subject: "BUILD SUCCESSFUL: Build Version",
		 body: "Build Successful ${env.JOB_NAME}\n\nView the log at:\n ${env.JOB_URL}testresults\\TestResult.html"
		 
		 publishHTML target: [
		    allowMissing: false,
		    alwaysLinkToLastBuild: false,
		    keepAll: true,
		    reportDir: 'testresults',
		    reportFiles: 'TestResult.html',
		    reportName: 'Test Report'
		  ]
		
	
	  BUILD_URL
 	}
	
	stage('Unittest'){
       
	}
	
	stage('Deploy')
	{
	  
	   
	}
	
	stage('Clear')
	{
	   echo "Clearing work space.."
	   echo "cleanWs()"
	}
}

